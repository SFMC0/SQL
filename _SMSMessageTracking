SELECT
    CASE 
        WHEN Name IN ('Welcome', 'Welcome_ReOptin') THEN 'Welcome_Welcome_ReOptin' 
        ELSE Name 
    END AS Name_Combined,
    COUNT(*) AS SentCount
FROM
    _SMSMessageTracking
WHERE
    EventDate >= DATEADD(day, -6, DATEADD(WEEK, DATEDIFF(WEEK, 0, GETDATE()), 0)) -- Get the starting date of the previous Monday
    AND EventDate < DATEADD(day, 1, DATEADD(WEEK, DATEDIFF(WEEK, 0, GETDATE()), 0)) -- Get the starting date of the upcoming Monday
    AND Status = 'Sent'
GROUP BY
    CASE 
        WHEN Name IN ('Welcome', 'Welcome_ReOptin') THEN 'Welcome_Welcome_ReOptin' 
        ELSE Name 
    END
